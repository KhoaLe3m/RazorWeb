@page "admin/edit-user-claim/{userid?}"
@model RazorWeb.Areas.Admin.Pages.User.EditUserRoleClaimModel
@{
    ViewData["Title"] = "Claim của user";
}
<h1>@ViewData["Title"]:@Model.user.UserName</h1>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ClaimType" class="control-label"></label>
                <input asp-for="Input.ClaimType" class="form-control" />
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ClaimValue" class="control-label"></label>
                <input asp-for="Input.ClaimValue" class="form-control" />
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.userclaim != null)
                {
                    <input type="submit"  value="Cập nhật" class="btn btn-primary" />
                    <input type="submit" asp-page-handler="DeleteClaim" asp-route-claimid="@Model.userclaim.Id" onclick="return confirm('Bạn có chắc muốn xóa claim này không?')" value="Xóa" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-page="./AddRole" asp-route-id="@Model.user.Id">Edit User</a>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
