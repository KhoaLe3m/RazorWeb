@page "/admin/assign-user-role/{id}"
@model RazorWeb.Areas.Admin.Pages.User.AddRoleModel
@{

}

<h4>Thiết lập Role cho thành viên: @Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                @Html.ListBoxFor(m => m.RoleName, Model.allRoles, new { id = "id-select-roles", @class = "w-100" })
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách thành viên</a>
        </form>
        <hr />
        <p>Các claim của user có được từ role</p>
        @if (Model.claimsInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInRole)
                {
                    <li>@claim.ClaimType: @claim.ClaimValue</li>
                }
            </ul>
        }
        @if (Model.claimsInUserClaim.Count > 0)
        {
            <p>Các claim riêng của user:</p>
            <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id" class="btn btn-primary">Thêm claim riêng</a>
            <ul>
                @foreach (var claim in Model.claimsInUserClaim)
                {
                     <li>
                         <a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim"  asp-route-claimid="@claim.Id" >@claim.ClaimType: @claim.ClaimValue</a>
                     </li>
                }



            </ul>
        }
        else
        {
            <p>Không có claim nào trực tiếp từ user</p>
            <a  asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id" class="btn btn-primary">Thêm claim riêng</a>

        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen:false,
        })
    </script>

    <partial name="_ValidationScriptsPartial" />
}