@page "/admin/edit-role/{roleid}"
@model RazorWeb.Areas.Admin.Pages.Role.EditModel
@{
    ViewData["Title"] = "Cập nhật role";
}
<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputRole.Name" class="control-label"></label>
                <input asp-for="InputRole.Name" class="form-control" />
                <span asp-validation-for="InputRole.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
        <hr />
        <p> Các đặc tính (claim của role):
        <a asp-page="./AddRoleClaim" asp-route-roleid="@Model.role.Id">Thêm claim</a>
        </p>
        @if(Model.claims.Count > 0)
            {
                <ul>
                    @foreach(var claim in Model.claims)
                {
                        <li>
                            <a asp-page="./EditRoleClaim" asp-route-claimid="@claim.Id">
                                @claim.ClaimType : @claim.ClaimValue
                            </a>
                        </li>
                        
                }
                </ul>
            }
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}