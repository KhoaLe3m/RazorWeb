@using Microsoft.AspNetCore.Identity
@using RazorWeb.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{


    @*SignInManager.IsSignedIn(this.User)*@

}
@if (SignInManager.IsSignedIn(this.User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-dark">
                Xin chào @UserManager.GetUserName(this.User)
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link text-dark">Đăng xuất</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-dark">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-dark">Đăng nhập</a>
        </li>
    </ul>
}
